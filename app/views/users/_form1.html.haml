.form1
  %h1.step-count Step 1/2
  = form_for @user do |f|
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "Business Type:"
      .col-md-5.col-md-offset-1.col-xs-6.col-xs-6
        = f.select(:entity, options_for_select(['LLC','S Corp', 'C Corp']))
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "City:"
      .col-md-5.col-md-offset-1.col-xs-6.col-xs-6
        = f.text_field :city
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "State:"
      .col-md-5.col-md-offset-1.col-xs-6.col-xs-6
        = f.select(:state, options_for_select(@state_list))
    .form-group.row
      .col-md-4.col-md-offset-2.col-xs-6
        = f.label "Action:"
      .col-md-5.col-md-offset-1.col-xs-6.col-xs-6
        = f.select(:action, options_for_select([['Change Of Address', 'CofA'], ['Annual/Biennual Report', 'AR']]))
    .col-md-6.col-md-offset-3.submit-btn
      = f.submit "Next", class: "btn2"

